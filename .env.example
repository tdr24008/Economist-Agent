# Hybrid RAG Agent Configuration

# ========================================
# Weaviate Configuration (Vector Database)
# ========================================
WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=  # Only needed for Weaviate Cloud

# ========================================
# Neo4j Configuration (Knowledge Graph)
# ========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# ========================================
# OpenAI Configuration (Required)
# ========================================
OPENAI_API_KEY=your_openai_api_key_here
LLM_API_KEY=your_openai_api_key_here  # Same as OPENAI_API_KEY
EMBEDDING_API_KEY=your_openai_api_key_here  # Same as OPENAI_API_KEY

# ========================================
# Model Configuration
# ========================================
LLM_MODEL=gpt-4o-mini
LLM_BASE_URL=https://api.openai.com/v1
EMBEDDING_MODEL=text-embedding-3-small

# ========================================
# Routing Configuration
# ========================================
ROUTING_MODE=auto
ROUTING_THRESHOLD=0.4

# ========================================
# Demo Mode (for development/testing)
# ========================================
# Leave the API keys empty to run in mock mode
# OPENAI_API_KEY=
# LLM_API_KEY=
# EMBEDDING_API_KEY=